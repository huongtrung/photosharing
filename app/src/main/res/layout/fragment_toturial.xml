<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/placeholer_image_1600"
      android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_violet_transparent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_account_toturial"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
       android:src="@drawable/dummy_avatar"/>
    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/fontzise_26"
        android:layout_below="@+id/img_account_toturial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Wellcome , Jennifer"
        android:gravity="center"/>
    <Button
        android:textColor="@color/white"
        android:textSize="@dimen/fontzise_20"
        android:text="Skip tutorial"
        android:background="@color/color_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
</RelativeLayout>
