<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_avatar_follow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_avatar"
        android:background="@drawable/bg_avatar_follow"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        tools:text="Jennifer"
        android:layout_toRightOf="@+id/iv_avatar_follow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/bt_follow"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Following"
        android:textAllCaps="false"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_white"
        android:background="@drawable/button_follow_bg"/>
</RelativeLayout>